      <section class="inSeason">
        <div class="col-sm-6">
          <h3>In Season Fruits & Veg</h3>
          <ul class="produce">
          <% for(var i=0; i<inRightNow.length; i++) {%>
            <li class="message">
              <span class="produceName"><%= inRightNow[i].name %></span>
              <span><%= inRightNow[i].season %></span>
              <button class='save'><i class="fas fa-cart-arrow-down"></i>save</button>

            </li>
          <% } %>
          </ul> 
        </div>
      </section>
      <section class="cart">
        <div class="col-sm-6">
          <h3>Saved Fruits & Veg</h3>
          <ul class="messages">
          <% for(var i=0; i<produce.length; i++) {%>
            <li class="message">
              <span><%= produce[i].name %></span>
              <span><%= produce[i].season %></span>
              <i class="far fa-trash-alt"></i>
            </li>

          <% } %>
          </ul> 
        </div>
      </section>
